<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.kelas.LihatDetailKelasActivity">

  <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Id:" />

  <EditText
      android:id="@+id/edit_id_kls_mtr"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:enabled="false"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      tools:ignore="SpeakableTextPresentCheck" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:text="Tgl Mulai Kls:"
        android:textAllCaps="false"
        android:textColor="#050505"
        android:textSize="14sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_tgl_mulai_kls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:textSize="24sp"
        android:textStyle="bold" />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:text="Tgl Akhir Kls:"
        android:textAllCaps="false"
        android:textColor="#050505"
        android:textSize="14sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_tgl_akhir_kls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:textSize="24sp"
        android:textStyle="bold" />
  </LinearLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID Instruktur:" />

    <Spinner
        android:id="@+id/spinner_ins_kls_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="15dp" />
  </com.google.android.material.textfield.TextInputLayout>

  <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID Materi:" />

    <Spinner
        android:id="@+id/spinner_mat_kls_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="15dp" />
  </com.google.android.material.textfield.TextInputLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="bottom"
      android:orientation="horizontal"
      android:padding="12dp">

    <Button
        android:id="@+id/btn_update_kls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:text="Update Kelas" />

    <Button
        android:id="@+id/btn_delete_kls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"
        android:text="Delete Kelas" />
  </LinearLayout>

</LinearLayout>